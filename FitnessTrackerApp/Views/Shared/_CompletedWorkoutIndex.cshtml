@model IEnumerable<CompletedWorkout>

@{
    ViewData["Title"] = "CompletedWorkout";
}

@{

    <li class="active">
        <div style="display:flex; justify-content:left;">
            <div class="button">
                <a asp-controller="CompletedWorkout" asp-action="Create" style="color: #ff511a"> <i class="bi bi-plus-circle"></i> &nbsp; Add Workout</a><br></br>
            </div>
        </div>
        <div>
            <div class="main-list" style="display: flex; align-items: center;">
                <span class="title" style="flex:1;">Date</span>
                <span class="title" style="flex:1;">Workout Type</span>
                <span class="title" style="flex:1;">Duration (minutes)</span>
                <span class="title" style="flex:1;">Post Workout Weight (kg)</span>
                <span class="title" style="flex:1;"></span>
            </div>


            @if (Model != null)
            {
                @foreach (var obj in Model)
                {

                    <div class="list-item" style="display: flex; align-items: center;">
                        <span class="item item-title" style="flex:1;">@obj.Date.ToString("yyyy MMM dd")</span>
                        <span class="item" style="flex:1;">@obj.WorkoutId</span>
                        <span class="item" style="flex:1;">@obj.Duration</span>
                        <span class="item" style="flex:1;">@obj.PostWorkoutWeight</span>
                        <span class="item" style="flex:1;">
                            <div class="w-75 btn-group" role="group" style="display:flex; justify-content:flex-end; align-items: center;">
                                <a asp-controller="CompletedWorkout" asp-action="Edit" asp-route-id="@obj.CompletedWorkoutId" class="btn mx-2" style="color:orange"> <i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-controller="CompletedWorkout" asp-action="Delete" asp-route-id="@obj.CompletedWorkoutId" class="btn mx-2" style="color:red"> <i class="bi bi-trash"></i> Delete</a>
                            </div>
                        </span>
                    </div>

                }
            }

        </div>
    </li>

                                      

} 