@model IEnumerable<ConsumedCheatMeal>

@{
    ViewData["Title"] = "ConsumedCheatMeal";
}

@{

    <li>
        <div style="display:flex; justify-content:left;">
            <div class="button">
                <a asp-controller="ConsumedCheatMeal" asp-action="Create" style="color: #ff511a"> <i class="bi bi-plus-circle"></i> &nbsp; Add Meal</a><br></br>
            </div>
        </div>
        <div>
            <div class="main-list" style="display: flex; align-items: center;">
                <span class="title" style="flex:1;">Date</span>
                <span class="title" style="flex:1;">Meal Name</span>
                <span class="title" style="flex:1;">Consumed Amount (g)</span>
                <span class="title" style="flex:1;">Post Meal Weight (kg)</span>
                <span class="title" style="flex:1;"></span>
            </div>

            @if (Model != null)
            {
                @foreach (var obj in Model)
                {

                    <div class="list-item" style="display: flex; align-items: center;">
                        <span class="item item-title" style="flex:1;">@obj.Date.ToString("yyyy MMM dd")</span>
                        <span class="item" style="flex:1;">@obj.MealId</span>
                        <span class="item" style="flex:1;">@obj.AmountConsumed</span>
                        <span class="item" style="flex:1;">@obj.PostMealWeight</span>
                        <span class="item" style="flex:1;">
                            <div class="w-75 btn-group" role="group" style="display:flex; justify-content:flex-end; align-items: center;">
                                <a asp-controller="ConsumedCheatMeal" asp-action="Edit" asp-route-id="@obj.ConsumedCheatMealId" class="btn mx-2" style="color:orange"> <i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-controller="ConsumedCheatMeal" asp-action="Delete" asp-route-id="@obj.ConsumedCheatMealId" class="btn mx-2" style="color:red"> <i class="bi bi-trash"></i> Delete</a>
                            </div>
                        </span>
                    </div>

                }

            }

        </div>

    </li>

                                      

} 